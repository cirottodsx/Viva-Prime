<style>
  .container {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    gap: 2.4rem;
  }

  .texts {
    text-align: center;
  }

  .texts h1 {
    font-family: "Monteserrat", sans-serif;
    font-size: 3.75rem;
    color: #333;
    margin: 20px 0 10px;
  }

  .texts p {
    font-size: 1.75rem;
    font-family: "Open sans", sans-serif;
    line-height: normal;
    color: #666;
  }

  .texts .orange {
    color: #fc4200;
  }

  .card-container {
    display: flex;
    justify-content: space-between;
    align-items: baseline;
    max-width: 100%;
    width: 100%;
  }

  .card {
    max-width: 40%;
    font-family: Arial, Helvetica, sans-serif;
  }

  .card h3 {
    color: #333;
    font-size: 1.87rem;
    margin: 20px 0 10px;
    font-weight: 500;
  }

  .card p {
    color: #666;
    font-size: 0.9375rem;
    margin: 0 0 10px;
  }

  .card img {
    max-width: 100%;
    width: 100%;
  }

  .card-footer {
    font-family: Arial, Helvetica, sans-serif;
    text-align: center;
    margin: 20px 0 10px;
    max-width: 100%;
  }

  .card-footer h1 {
    font-size: 2.0625rem;
    font-weight: 300;
    color: #333;
  }

  .org2 {
    color: #fc4200;
  }

  @media (max-width: 781px) {
    .card-container {
      flex-direction: column;
      align-items: center;
    }

    .card {
      max-width: 100%;
    }
  }

  @media (max-width: 481px) {
    .card-footer h1 {
      font-size: 1.2rem;
    }
  }
</style>
