<section class="container">
  <div class="max-container main-container">
    <div class="text-ctn">
      <h2>POWERFUL</h2>
      <h1>NATURAL</h1>
      <h2>PROVEN SAFE</h2>
    </div>
  </div>
</section>

<style>
  .container {
    background: url(../../public/imgs/powerful-bg.jpg) top center no-repeat;
  }

  .main-container {
    font-family: "Montserrat", sans-serif;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    min-height: 140vh;
    max-width: 100%;
    width: 100%;
  }

  .text-ctn {
    text-align: center;
    max-width: 100%;
    width: 100%;
  }

  .text-ctn h2 {
    color: #fff;
    font-size: clamp(2.8125rem, 1rem);
    text-align: center;
    font-weight: 400;
    line-height: 1.1;
  }

  .text-ctn h1 {
    font-size: 9rem;
    color: #262626;
  }

  @media (max-width: 781px) {
    .text-ctn h2 {
      font-size: 2.2rem;
    }

    .text-ctn h1 {
      font-size: 5rem;
    }
  }

  @media (max-width: 481px) {
    .text-ctn h2 {
      font-size: 1.3rem;
    }

    .text-ctn h1 {
      font-size: 3rem;
    }
  }
</style>
