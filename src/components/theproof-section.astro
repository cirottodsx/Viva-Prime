---
import { getEntry } from "astro:content";
const conteudo = await getEntry("conteudo", "the-proof");
---

<section class="container">
  <div class="max-container main-container">
    <div class="content">
      <img src={conteudo.data.theProofImg} alt="" />
      <h1>{conteudo.data.title}</h1>
      <img src={conteudo.data.peoplesImg} alt="" />
      <p class="low">{conteudo.data.footer}</p>
    </div>
    <div class="img">
      <a href="#rush-my-order"
        ><img src="../../public/imgs/rush-my-rem.png" alt="" /></a
      >
    </div>
  </div>
</section>

<style>
  .container {
    background: url(../../public/imgs/sec2.jpg) top center no-repeat;
  }

  .main-container {
    display: flex;
    flex-direction: column;
    width: 100%;
  }

  .content {
    margin-top: 6rem;
    display: flex;
    flex-direction: column;
    align-self: flex-end;
    justify-content: center;
    gap: 0.6rem;
    max-width: 50%;
    width: 100%;
    color: #363535;
  }

  .content h1 {
    font-family: "Monteserrat", sans-serif;
    font-size: 2.1rem;
    text-align: center;
    font-weight: 400;
  }

  .content img {
    max-width: 100%;
    width: 100%;
  }

  .low {
    font-family: Arial, Helvetica, sans-serif;
    font-size: 0.7rem;
    font-weight: 800;
    text-align: center;
  }

  .img img {
    max-width: 100%;
    width: 100%;
    margin: 2.5rem 0;
  }

  @media (max-width: 781px) {
    .main-container {
      justify-content: center;
    }

    .content {
      max-width: 100%;
    }
  }
</style>
