---
import { getEntry } from "astro:content";
const conteudo = await getEntry("conteudo", "breakthrough");
---

<section class="container max-container">
  <div class="texts">
    <h2 class="blue">{conteudo.data.title}</h2>
    <p class="orange">{conteudo.data.subtitle}</p>
    <p>{conteudo.data.p1}</p>
    <p class="underline">{conteudo.data.p2}</p>
  </div>

  <img src={conteudo.data.img} alt="" />
</section>

<style>
  .container {
    display: flex;
    align-items: center;
    justify-content: space-around;
  }

  .texts {
    color: #333;
    display: flex;
    flex-direction: column;
    gap: 1rem;
    max-width: 100%;
    width: 100%;
    padding: 1.5rem;
  }

  .texts h2 {
    font-size: 2rem;
    font-weight: bold;
  }

  .texts p {
    font-weight: 600;
    font-size: 0.9rem;
  }

  .blue {
    color: #04a8f5;
    font-size: 2rem;
  }

  .orange {
    color: #f18704;
  }

  .underline {
    text-decoration: underline;
  }

  img {
    max-width: 100%;
    width: 70%;
  }

  @media (max-width: 781px) {
    .container {
      flex-direction: column;
    }
  }
</style>
