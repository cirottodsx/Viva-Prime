---
import Header from "../components/Header.astro";
import HeadLayout from "./HeadLayout.astro";
---

<html lang="en">
  <HeadLayout />
  <body>
    <Header />
    <slot />
    <style is:global>
      *,
      *::after,
      *::before {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }

      html {
        font-size: 100%;
        font-family: Arial, Helvetica, sans-serif;
      }

      .max-container {
        border: 1px solid red;
        max-width: 80vw;
        width: 100%;
        margin: 0 auto;
        line-height: 1.42857143;
      }
    </style>
  </body>
</html>
